<p id="notice"><%= notice %></p>

<script type="text/javascript">
	$(function() {
		$("#tabBottom").tabs();
		$( "#accordionTL" ).accordion();
		$( "#accordionTR" ).accordion();

        $("#jquery_jplayer")
        .jPlayer({
            ready: function ()
            {
                this.element.jPlayer("setFile", "<%= @caller_sound %>").jPlayer("play");
                showPauseBtn();
            },
            customCssIds: true
        })
        .jPlayer("onSoundComplete", function() {
            this.element.jPlayer("play");
        });
        $("#pause").hide();
        
        function showPauseBtn()
        {
            $("#play").fadeOut(function(){
                $("#pause").fadeIn();
            });
        }

        function showPlayBtn()
        {
            $("#pause").fadeOut(function(){
                $("#play").fadeIn();
            });
        }

        function playTrack(t,n)
        {
            $("#jquery_jplayer").jPlayer("setFile", t).jPlayer("play");

            showPauseBtn();

            return false;
        }

        $("#play").click(function() {
            $("#jquery_jplayer").jPlayer("play");
            showPauseBtn();
            return false;
        });

        $("#pause").click(function() {
            $("#jquery_jplayer").jPlayer("pause");
            showPlayBtn();
            return false;
        });

        
    });

	</script>



<div class="container_16">

  <div class="grid_10" id="accordionTL">
	<h3><a href="#">Last Ball</a></h3>
    <div>
    <span style="font-size:95pt;">
  <%= @game.last_ball_called %>
      <!--<%= audio_tag @caller_sound, :autoplay => true, :controls => true, id => "audio" %>-->

      &nbsp;
    </span>
      <span style="font-size:50px;width:100%; text-align:right">
<%= link_to 'Next Ball',:action => :next_ball %>
   </span>
   </div>
</div>

  <div class="grid_1">
    <span id="jquery_jplayer"></span>

    <span id="player_container">
            <ul id="icons" class="">
                <li id="play" class="ui-state-default ui-corner-all"><span class="ui-icon ui-icon-play"></span></li>
                <li id="pause" class="ui-state-default ui-corner-all"><span class="ui-icon ui-icon-pause"></span></li>
            </ul>
        </span>

    
  </div>

<div class="grid_5" id="accordionTR">
  <h3><a href="#">Last Few Balls</a></h3>
  <div style="font-size:larger">
  <ul>
  <% @game.called_numbers.reverse[0..9].each { | cn | %>
    <li><%= cn.called_ball %></li>
  <% } %>
  </ul>

  </div>
</div>


<div class="clear"> </div>


<div class="clear"> </div>
  <p>&nbsp;</p>

<div class="grid_16" id="tabBottom">
  <ul><li><a href="#tabBottom-1">All Balls</a></li></ul>
  <div class="grid_16" id="tabBottom-1">
  <div class="grid_1">
    <% (1..@game.max_balls).each { | ball | %>
        <% if ball%10 == 0 %>
            </div>
            <div class="grid_1">
        <% end %>
        <%
           ball_style="color:plum;"
        if @game.has_been_called? ball
            ball_style = "font-weight:bold;color:yellow;"
        end
        %>
      <span style="<%= ball_style %>; font-size:larger">
        <%= ball %><br>
      </span>
    <% } %>
  </div>
  </div>
</div>

<div class="clear"> </div>

<div class="grid_10">

<p>
  <b>Max balls:</b>
  <%= @game.max_balls %>
</p>


<%= link_to 'Edit', edit_game_path(@game) %> |
<%= link_to 'Back', games_path %>

</div>
</div>
